# =====================================
# PVCFC RAG API - Environment Variables
# =====================================
# Copy this file to .env and fill in your values
# WARNING: NEVER commit the .env file to version control

# Application Configuration
APP_ENV=local
API_PORT=8000
LOG_LEVEL=INFO

# Version info (will be overridden by CI/CD in production)
VERSION=0.1.0-dev
COMMIT_SHA=unknown

# LLM Provider Configuration
# Options: openai, gemini, none
LLM_PROVIDER=none

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=

# Google Gemini Configuration (if using Gemini)
GEMINI_API_KEY=

# Performance Settings
CACHE_TTL_MINUTES=10
RATE_LIMIT_PER_MINUTE=60

# Note: Additional variables for Phase 2+ will be added later:
# - Database connection strings
# - Redis configuration
# - Monitoring endpoints
# - Security keys
